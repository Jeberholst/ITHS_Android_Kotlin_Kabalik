<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleViews">
        <item name="fontFamily">@font/irish_grover</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardBackAppNameStyle">
        <item name="android:fontFamily">@font/irish_grover</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="RoundsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/irish_grover</item>
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="textAllCaps">true</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InformationTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_standard_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>w
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ButtonStyleGamingFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_standard_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:padding">5dp</item>w
        <item name="android:layout_marginBottom">@dimen/element_margin_30</item>
        <item name="layout_constraintWidth_percent">0.45</item>
    </style>

    <style name="FragmentFrameLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/element_margin_10</item>
        <item name="android:background">@color/deep_purple_400</item>
    </style>

</resources>